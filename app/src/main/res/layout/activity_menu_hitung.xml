<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuHitung">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorLayout">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Menu Hitung Bangun Datar"
            android:textAlignment="center"
            android:textColor="@color/judul"
            android:textStyle="bold"
            android:textSize="24dp"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="5dp">

            <TextView
                android:id="@+id/persegi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Menghitung Persegi"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/lingkaran"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:text="Menghitung Lingkaran"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/persegiPanjang"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:text="Menghitung Persegi Panjang"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/segitiga"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:text="Menghitung Segitiga"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/trapesium"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:text="Menghitung Trapesium"
                android:textSize="18dp"/>
        </TableLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>